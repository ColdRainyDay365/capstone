    <!-- Effort Line Form View -->
    <record id="view_change_request_effort_line_form" model="ir.ui.view">
        <field name="name">change.request.effort.line.form</field>
        <field name="model">change.request.effort.line</field>
        <field name="arch" type="xml">
            <form string="Effort Breakdown Line">
                <sheet>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="task_number"/>
                            <field name="task_category"/>
                        </group>
                        <group>
                            <field name="effort_days"/>
                            <field name="change_request_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="expected_task"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Effort Line Action -->
    <record id="action_change_request_effort_line" model="ir.actions.act_window">
        <field name="name">Effort Breakdown Lines</field>
        <field name="res_model">change.request.effort.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
